{
  "name": "slack-ai-aggregator-lambda",
  "version": "1.0.0",
  "description": "Lambda functions for Slack AI Topic Aggregator",
  "type": "module",
  "scripts": {
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "logs:event": "serverless logs -f slackEventHandler -t",
    "logs:monitor": "serverless logs -f channelMonitor -t",
    "logs:summary": "serverless logs -f summaryGenerator -t",
    "offline": "serverless offline start",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@slack/web-api": "^7.0.2",
    "openai": "^4.56.0"
  },
  "devDependencies": {
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.2",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-dynamodb-local": "^0.2.40",
    "jest": "^29.7.0",
    "@types/aws-lambda": "^8.10.131",
    "@types/node": "^20.10.6"
  }
}